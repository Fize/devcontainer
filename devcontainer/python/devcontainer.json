{
  "name": "Python Development Container",
  "image": "malzaharguo/devcontainer:py3.13.1",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python3",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black"
      }
    }
  },

  "mounts": [
    "source=${localEnv:HOME}/.gitconfig,target=/root/.gitconfig,type=bind,consistency=cached",
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
    "source=${localEnv:HOME}/.docker/config.json,target=/root/.docker/config.json,type=bind,readonly"
  ],

  "remoteUser": "root",
  "workspaceFolder": "/workspace",

  "containerEnv": {
    "DOCKER_BUILDKIT": "1"
  },

  "postCreateCommand": "python3 --version && pip3 --version",

  "features": {}
}
